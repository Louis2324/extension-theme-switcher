{
  "manifest_version": 3,
  "name": "Theme Switcher",
  "version": "1.0",
  "description": "Apply intelligent themes that adapt to website colors",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Change website theme"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ]
}
